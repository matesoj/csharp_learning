                Console.WriteLine("--- ADMINISTRATOR PARKINGU   ---");
                Console.WriteLine("--- NIP: 123-456-789         ---");
                Console.WriteLine("--- Tel: +48 123-456-789     ---");
                Console.WriteLine(sep);
                Console.WriteLine(iy);
                iy++;
                
                Thread.Sleep(1000);
            }
        }
    }
